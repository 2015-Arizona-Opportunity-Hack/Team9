extends ./layouts/main.jade

block content
  section#services
    .container
      .row
        .col-sm-8.col-sm-offset-2(ng-repeat="sect in pages", ng-show="page.isSelected(sect.page)")
          text-angular(ng-model="sect.content",
            ta-text-editor-class="form-content",
            ta-html-editor-class="form-content",
            ta-focussed-class="focussed",
            ng-show="false") {{sect.content}}
          p(ng-show="true") {{sect.content}}
      .row(ng-show="page.isSelected(8)")
        .col-sm-8.col-sm-offset-2
          form.form-horizontal(ng-submit="donate()")
            .form-group
              .col-sm-12
                label Donate to a specific cause
                select.form-control(ng-model="donation", ng-options="event.name for event in donationEvents")
                  option(value="") Select Cause
            .form-group
              .col-sm-4
                label Amount
                .input-group
                    .input-group-addon $
                    input.form-control(type="text")
            .form-group
              input.btn.btn-primary.btn-big.pull-right(type="submit", value="DONATE")
  hr.main
  section#carousel
      .container
        .row
          .col-lg-12.text-center
            h2 Gallery
            .row
              .col-md-4.col-md-offset-4
                hr.style-one.text-center 
            .slides
              .slide-one
                img(src="images/slide1-visionwall.jpg", alt="")
              .slide-two
                img(src="images/slide3-backtoschool.jpg", alt="")
              .slide-three
                img(src="images/slide5-walkinthepark2012.jpg", alt="")
              .slide-four
                img(src="images/slide6-volunteers.jpg", alt="")
              .slide-four
                img(src="images/slide2-chandlergivesback.jpg", alt="")
              .slide-four
                img(src="images/slide12-intel.jpg", alt="")
  hr.main
  section#about
    .container
      .row
        .text-center
          h2 About
        .row
          .col-md-4.col-md-offset-4
            hr.style-one.text-center 
        .row
          .col-lg-6.col-sm-12.text-center#about-mission
            h3 Mission and Vision
            p At Chandler Christian Community Center, we change lives by nourishing minds and bodies to create a connected, thriving community.
            p To have a healthy and productive community built on a foundation of dignity and hope.
          .col-lg-6.col-sm-12.text-center
            h3.text-center Our History
            p The Chandler Christian Community Center was organized in 1966 for the purpose of providing assistance to those who were in need. The center has provided emergency food to the needy of this community. The numbers have increased dramatically over the years. Today it remains the largest charitable Food Bank organization in the community, providing food to the low income and homeless in the area.
  hr.main
  section#contact
    .container
      .row
        .col-lg-10.col-lg-offset-1.text-center
          h2.section-heading Contact us                     
          .row
            .col-md-4.col-md-offset-4
              hr.style-one.text-center            
          h3 Comments or Questions
          .row
            .col-lg-3.col-md-6.col-xs-12
              h4.text-center Email
              a(href='mailto:theiremailhere@gmail.com') theiremail@email.com
            .col-lg-3.col-md-6.col-xs-12
              h4.text-center Call
              p 480-963-1423
            .col-lg-3.col-md-6.col-xs-12
              h4.text-center Mail
              p 345 S. California St.Chandler, AZ 85225
            .col-lg-3.col-md-6.col-xs-12
              h4.text-center Fax
              p Fax:480-726-0896
  hr.main
  footer
    .container
      hr.style-four
      .row
        .col-lg-3.col-sm-6.text-center
          p Chandler Christian Community Center
        .col-lg-3.col-sm-6.text-center
          p 345 S. California St. Chandler, AZ 85225
        .col-lg-3.col-sm-6.text-center
          p 480-726-0896
        .col-lg-3.col-sm-6.text-center
          a(href="#") Hours/Locations
        
